<%= link_to "Back to Wiki", @wiki %>
<h1>Edit Wiki</h1>
<br>
<br>

<div class="row">
  <div class="col-md-8">
    <%= form_for @wiki do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter wiki body" %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>

<div class="form-group">
  <%= render partial: 'collaborators/collaborators', locals: { wiki: @wiki, user: current_user } %>
</div>
