!!!
%html
  %head
    %title Blocipedia
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    - flash.each do |name, msg|
      = content_tag :div, msg, :id => "flash_#{name}"
    .container
      %ul.nav.nav-tabs
        %li= link_to "Blocipedia", root_path
        %li= link_to "Wikis", wikis_path
        %li= link_to "About", about_path
        .pull-right.user-info
          - if user_signed_in?
            Signed in as:
            %strong= current_user.email
            |
            \#{link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link'} - #{link_to "Sign Out", destroy_user_session_path, method: :delete, :class => 'navbar-link'}
          - else
            = link_to "Sign Up", new_user_registration_path, :class => 'navbar-link'
            \-
            \#{link_to "Sign In", new_user_session_path, :class => 'navbar-link'}
        - if flash[:notice]
          .alert.alert-success
            %button.close{"data-dismiss" => "alert", :type => "button"} ×
            = flash[:notice]
        - elsif flash.now[:alert]
          .alert.alert-danger
            %button.close{"data-dismiss" => "alert", :type => "button"} ×
            = flash.now[:alert]
        - elsif flash[:alert]
          .alert.alert-warning
            %button.close{"data-dismiss" => "alert", :type => "button"} ×
            = flash[:alert]
        %p.notice= notice
        %p.alert= alert
    = yield
